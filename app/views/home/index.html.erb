<div class="weather-container day">
  <div class="current-weather text-center">
    <h1 id="city-name">City Name</h1>
    <p id="current-date">December 16, 2024</p>
    <h2 id="temperature">25째C</h2>
    <p id="feels-like">Feels Like: 27째C</p>
  </div>

  <div class="forecast-card">
    <div class="card-header">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event calendar-icon" viewBox="0 0 16 16">
        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5z"/>
        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
      </svg>
      <span>5-DAY FORECAST</span>
    </div>
    <hr/>
    <div class="card-body">
      <% (0..4).each do |i| %>
        <div class="forecast-row" id="forecast-<%= i %>">
          <span class="day-name">DayName</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-fill weather-icon" viewBox="0 0 16 16">
            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383"/>
          </svg>
          <span class="min-temp">Min: 12째C</span>
          <span class="max-temp">Max: 20째C</span>
        </div>
        <hr />
      <% end %>
    </div>
  </div>
</div>
